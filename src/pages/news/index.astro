---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('news')).sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
---

<Layout title="Новини - Офіс НГА">
  <section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <h1 class="text-5xl font-bold text-slate-900">Новини Офісу НГА</h1>
      <p class="mt-4 text-xl text-slate-600">Звіти про проведені аудити та розслідування корупційних схем</p>
    </div>

    {posts.length > 0 ? (
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {posts.map((post) => (
          <a href={`/news/${post.slug}`} class="group card">
            <div class="mb-4 h-48 overflow-hidden rounded-lg bg-gradient-to-br from-blue-500 to-purple-500">
              {post.data.image && (
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="h-full w-full object-cover transition-transform group-hover:scale-105"
                />
              )}
            </div>
            <div class="flex flex-wrap gap-2">
              {post.data.tags && post.data.tags.map((tag) => (
                <span class="rounded-full bg-blue-100 px-3 py-1 text-xs font-semibold text-blue-600">
                  {tag}
                </span>
              ))}
            </div>
            <p class="mt-3 text-sm font-semibold text-slate-500">
              {new Date(post.data.pubDate).toLocaleDateString('uk-UA', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </p>
            <h2 class="mt-2 text-2xl font-bold text-slate-900 group-hover:text-blue-600">
              {post.data.title}
            </h2>
            <p class="mt-3 line-clamp-2 text-slate-600">{post.data.description}</p>
            <div class="mt-4 flex items-center gap-2 text-sm font-semibold text-blue-600 group-hover:gap-3 transition-all">
              Читати далі →
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="rounded-xl border border-slate-200 bg-white p-12 text-center">
        <p class="text-slate-600">Публікацій ще немає. Почніть з додавання першої!</p>
      </div>
    )}
  </section>
</Layout>

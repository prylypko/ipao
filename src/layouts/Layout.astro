---
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Офіс НГА - Офіс Незалежного Громадського Аудиту', description = 'Виявляємо. Доводимо. Зупиняємо.' } = Astro.props;
---

<!doctype html>
<html lang="uk">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-white text-gray-900">
    <div id="fb-root"></div>
    <script is:inline>
      window.fbAsyncInit = function() {
        FB.init({
          appId            : 'your-app-id', // Optional: Add App ID here if you have one
          autoLogAppEvents : true,
          xfbml            : true,
          version          : 'v21.0'
        });
        console.log('Facebook SDK Initialized');
      };
    </script>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/uk_UA/sdk.js"></script>
    <script is:inline>
      document.addEventListener('astro:after-swap', () => {
        if (typeof FB !== 'undefined') {
          FB.XFBML.parse();
        }
      });
    </script>
    <header class="border-b border-gray-200 bg-white">
      <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row items-center justify-between py-4 gap-4">
          <a href="/" class="flex items-center gap-3 accent-bar-left">
            <span class="text-2xl font-bold text-gray-900">Офіс НГА</span>
          </a>
          <div class="flex flex-wrap justify-center items-center gap-4 sm:gap-8">
            <a href="/news" class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Новини</a>
            <a href="/#about" class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Про нас</a>
            <a href="/#contact" class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Контакти</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="border-t border-gray-200 bg-gray-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-3">
          <div>
            <h3 class="text-lg font-bold text-gray-900 accent-bar-left">Офіс НГА</h3>
            <p class="mt-2 text-sm text-gray-600">Офіс Незалежного Громадського Аудиту</p>
            <p class="mt-1 text-sm text-gray-600">Виявляємо. Доводимо. Зупиняємо.</p>
          </div>
          <div>
            <h4 class="font-semibold text-gray-900">Навігація</h4>
            <ul class="mt-4 space-y-2 text-sm">
              <li><a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Головна</a></li>
              <li><a href="/news" class="text-gray-600 hover:text-gray-900 transition-colors">Новини</a></li>
              <li><a href="/#about" class="text-gray-600 hover:text-gray-900 transition-colors">Про нас</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-gray-900">Зв'язатися</h4>
            <ul class="mt-4 space-y-2 text-sm text-gray-600">
              <li>Email: ipao.ukraine@gmail.com</li>

            </ul>
          </div>
        </div>
        <div class="mt-8 border-t border-gray-200 pt-8 text-center text-sm text-gray-600">
          <p>&copy; 2026 Офіс НГА. Всі права захищені.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
